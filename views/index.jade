extends layout

block content
  h1= title
  p Welcome to #{title}
  #messages
  .match.container
    .row
      .col-lg-4
        if name
          p
            span Hi #{name}
            a.btn.btn-lg.btn-primary(href='/signout') Sign out
        else
          p
            a.btn.btn-lg.btn-primary(href='/signup') Sign up

    .row
      each dog in pooches
        .col-lg-4
          h2= dog.name
          .puppy
            img(src=dog.image width=180)
            p
            span#test
              button.btn.btn-primary.likeme#dog(data-id=dog.id)(type='button') like me
              <div ></div>
              

   script(src='socket.io/socket.io.js')
   script(src='js/socket-client.js')
